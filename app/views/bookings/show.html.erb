<div class="container">
  <div class="booking-show-card">
    <h2>Your booked the "<%= @desk.title %>" desk!</h2>
    <hr>
    <%= cl_image_tag(@desk.photo.key, width: 400, height: 300, crop: :fill) %>
    <hr>
    <h5>Date: <%= @booking.booked_on %></h5>
    <hr>
    <p><%= @desk.description %></p>
    <p><%= @desk.address %></p>
    <p><%= @desk.price %></p>
    <p>Host: <%= @desk.user.first_name %></p>
     <hr>
    <div class="btn btn-normal"><%= link_to "Back to all bookings", bookings_path %></div>
  </div>
</div>
