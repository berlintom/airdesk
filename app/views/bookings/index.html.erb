                  trigger="loop"
                  colors="primary:#99a799,secondary:#99a799"
                  style="width:40px;height:40px">
              </lord-icon>
            </div>
          <% else %>
            <div class="sign">
            <script src="https://cdn.lordicon.com/libs/mssddfmo/lord-icon-2.1.0.js"></script>
