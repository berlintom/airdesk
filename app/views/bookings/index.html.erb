                  src="https://cdn.lordicon.com/zpmqckup.json"
                  trigger="loop"
                  colors="primary:#99a799,secondary:#f9a051"
                  style="width:40px;height:40px">
              </lord-icon>
            </div>
          <% end %>
          </div>
          <div class="price"><h2>Total: <%= (((booking.end_date - booking.start_date).to_i) * (booking.desk.price/100).round + ((booking.desk.price/100).round)) %>â‚¬</h2></div>
        </div>
